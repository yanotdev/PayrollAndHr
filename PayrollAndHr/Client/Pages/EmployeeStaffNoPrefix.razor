<!-- Modal -->
<div class="modal fade" id="popupEmpID" tabindex="-1" role="dialog" aria-labelledby="popupEmpLabel" aria-hidden="true" data-backdrop="static" style="@(_showModal ? "display: block;" : "display: none;")">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Staff Number Prefix Setup</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-success" id="lblsuccpref">
                </div>
               @ChildContent
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnSaveChanges">Save changes</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private bool _showModal = false;

    public void ShowModal()
    {
        _showModal = true;
        StateHasChanged();
    }

    private void CloseModal()
    {
        _showModal = false;
        OnClose.InvokeAsync(null);
    }
}
